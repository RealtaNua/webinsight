<h1>Choose Your Theme</h1>



<div class="row">
    <% @themes.each do |theme| %>
    <a href="<%= url_for(:controller => 'surveys', :action => 'updatetheme', :survey => @survey, :id => params[:id], :theme_id => theme.id) %>">
  <div class="col-sm-6 col-md-4 theme-thumbnail">
    <div class="thumbnail">
      <img data-src="holder.js/400x300" alt="...">
      <div class="caption">
        <h3><%= theme.name %></h3>
        <p><%= theme.description %></p>
      </div>
    </div>
  </div>
  </a>
      <% end %>
</div>



